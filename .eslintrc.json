{
  "extends": [
    "airbnb",
    "plugin:react-native/all",
    "prettier",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true,
    "react-native/react-native": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-func-assign": "off",
    "no-unreachable": "warn",
    "no-shadow": "off",
    "no-use-before-define": "off",
    "spaced-comment": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": false,
        "printWidth": 80,
        "endOfLine": "auto",
        "jsxBracketSameLine": true
      }
    ],
    "react-native/no-color-literals": "off",
    "react-native/no-inline-styles": "off",
    "import/order": 0,
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.spec.js",
          "**/*.stories.js",
          "**/storybook/*"
        ]
      }
    ],
    "no-underscore-dangle": 0,
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn",
    "global-require": "off",
    "react/prop-types": 1, // warning
    "react/jsx-props-no-spreading": 0, // ignore spread
    "react-native/sort-styles": 0,
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "log", "info", "disableYellowBox"]
      }
    ]
  },
  "plugins": ["react", "react-native", "prettier", "react-hooks"]
}
